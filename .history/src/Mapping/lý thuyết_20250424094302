import React from 'react';

const CartComponent = () => {
  const cart = [
    { id: 1, name: 'Ão thun', price: 200000, quantity: 2 },
    { id: 2, name: 'Quáº§n jean', price: 400000, quantity: 1 },
    { id: 3, name: 'MÅ© lÆ°á»¡i trai', price: 150000, quantity: 3 }
  ];

  // 1. Lá»c sáº£n pháº©m cÃ³ sá»‘ lÆ°á»£ng >= 2
  const filteredCart = cart.filter(item => item.quantity >= 2);

  // 2. TÃ­nh tá»•ng tiá»n
  const totalPrice = cart.reduce((total, item) => {
    return total + item.price * item.quantity;
  }, 0);

  return (
    <div>
      <h2>ğŸ›’ Sáº£n pháº©m trong giá» (>= 2 cÃ¡i):</h2>
      <ul>
        {filteredCart.map(item => (
          <li key={item.id}>
            {item.name} - SL: {item.quantity} - GiÃ¡: {item.price.toLocaleString()}Ä‘
          </li>
        ))}
      </ul>

      <h3>ğŸ’° Tá»•ng tiá»n: {totalPrice.toLocaleString()}Ä‘</h3>
    </div>
  );
};

export default CartComponent;
